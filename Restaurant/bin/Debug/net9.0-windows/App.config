<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>
    <connectionStrings>
        <!-- Updated connection string with better compatibility -->
        <add name="RestaurantDB" 
             connectionString="Data Source=DESKTOP-HAO4B4S\SQLEXPRESS;Initial Catalog=Restaurant;Integrated Security=True;TrustServerCertificate=True;Encrypt=False;" 
             providerName="System.Data.SqlClient" />
    </connectionStrings>
    <appSettings>
        <!-- Menu discount percentage -->
        <add key="MenuDiscountPercentage" value="10" />
        
        <!-- Minimum order amount for free delivery -->
        <add key="MinOrderForFreeDelivery" value="100" />
        
        <!-- Standard delivery cost -->
        <add key="StandardDeliveryCost" value="15" />
        
        <!-- Order discount threshold -->
        <add key="OrderDiscountThreshold" value="200" />
        
        <!-- Order discount percentage -->
        <add key="OrderDiscountPercentage" value="5" />
        
        <!-- Frequent order count -->
        <add key="FrequentOrderCount" value="3" />
        
        <!-- Frequent order period in days -->
        <add key="FrequentOrderPeriodDays" value="30" />
        
        <!-- Frequent order discount percentage -->
        <add key="FrequentOrderDiscount" value="7" />
        
        <!-- Low stock threshold -->
        <add key="LowStockThreshold" value="2" />
    </appSettings>
</configuration>